# EDI Processing Application Environment Configuration
# Copy this to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=edi_processing
DB_USER=edi_user
DB_PASS=secure_password_here
DB_CHARSET=utf8mb4

# Application Settings
APP_ENV=development
APP_NAME="EDI Processing System"
APP_URL=http://localhost
APP_DEBUG=true
APP_TIMEZONE=America/New_York
LOG_LEVEL=debug
SESSION_LIFETIME=120

# EDI File Processing Paths
EDI_DATA_PATH=/var/www/edi-app/data
EDI_INBOX_PATH=${EDI_DATA_PATH}/inbox
EDI_OUTBOX_PATH=${EDI_DATA_PATH}/outbox
EDI_PROCESSED_PATH=${EDI_DATA_PATH}/processed
EDI_ERROR_PATH=${EDI_DATA_PATH}/error
EDI_ARCHIVE_PATH=${EDI_DATA_PATH}/archive
EDI_TEMP_PATH=${EDI_DATA_PATH}/temp

# EDI Processing Settings
EDI_DEFAULT_ENCODING=UTF-8
EDI_SEGMENT_TERMINATOR=~
EDI_ELEMENT_SEPARATOR=*
EDI_COMPONENT_SEPARATOR=^
EDI_MAX_FILE_SIZE=10485760
EDI_BACKUP_RETENTION_DAYS=30

# Email Notifications (SMTP)
MAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=edi@greenfieldplastics.com
MAIL_FROM_NAME="EDI Processing System"

# Error Notification Recipients
NOTIFY_ERRORS_TO=admin@greenfieldplastics.com,it@greenfieldplastics.com

# Trading Partner Connections (Nifco)
NIFCO_TEST_MODE=true
NIFCO_CONNECTION_TYPE=SFTP
NIFCO_HOST=edi.nifco.com
NIFCO_PORT=22
NIFCO_USERNAME=greenfield_edi
NIFCO_PASSWORD=change_me
NIFCO_INBOX_PATH=/inbox/greenfield
NIFCO_OUTBOX_PATH=/outbox/greenfield
NIFCO_TEST_HOST=test-edi.nifco.com
NIFCO_CONTACT_EMAIL=fieldsc@us.nifco.com

# AS2 Configuration (for future use)
AS2_ENABLED=false
AS2_PARTNER_URL=https://edi.nifco.com/as2
AS2_OUR_ID=GREENFIELD_PLASTICS
AS2_PARTNER_ID=NIFCO_INC
AS2_CERTIFICATE_PATH=/etc/ssl/certs/edi_cert.p12
AS2_PRIVATE_KEY_PATH=/etc/ssl/private/edi_key.pem

# Security Settings
ENCRYPTION_KEY=base64:your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here
CSRF_PROTECTION=true
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# API Settings
API_RATE_LIMIT=60
API_TIMEOUT=30
API_VERSION=v1

# Backup Settings
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/edi

# Logging Configuration
LOG_CHANNEL=daily
LOG_PATH=/var/log/edi-app
LOG_MAX_FILES=14
LOG_EMERGENCY_EMAIL=admin@greenfieldplastics.com

# ERP Integration Settings (for future use)
ERP_API_ENABLED=false
ERP_API_URL=http://localhost:8000/api
ERP_API_KEY=your_erp_api_key
ERP_SYNC_FREQUENCY=300

# Development/Testing Settings
ENABLE_TEST_MODE=true
GENERATE_SAMPLE_DATA=false
MOCK_EDI_CONNECTIONS=true
DEBUG_EDI_PARSING=true

# Performance Settings
MEMORY_LIMIT=256M
MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=10M
PHP_POST_MAX_SIZE=10M

# Cache Settings
CACHE_ENABLED=false
CACHE_DRIVER=file
CACHE_TTL=3600
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Queue Settings (for background processing)
QUEUE_ENABLED=false
QUEUE_DRIVER=database
QUEUE_RETRY_AFTER=90