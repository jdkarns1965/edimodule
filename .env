# EDI Module Environment Configuration
# SFTP Integration Settings

# SFTP Connection Settings
SFTP_ENABLED=true
SFTP_LIBRARY=phpseclib
SFTP_HOST=localhost
SFTP_PORT=22
SFTP_USERNAME=jdkarns
SFTP_PASSWORD=password
SFTP_TIMEOUT=30

# SFTP Directory Paths (Local Development)
SFTP_INBOX_PATH=/var/www/html/edimodule/data/inbox
SFTP_OUTBOX_PATH=/var/www/html/edimodule/data/outbox
SFTP_PROCESSED_PATH=/var/www/html/edimodule/data/processed
SFTP_ERROR_PATH=/var/www/html/edimodule/data/error
SFTP_ARCHIVE_PATH=/var/www/html/edimodule/data/archive

# SFTP Remote Paths (for production use)
SFTP_REMOTE_INBOX=/inbox
SFTP_REMOTE_OUTBOX=/outbox

# File Processing Settings
FILE_MONITOR_ENABLED=true
FILE_MONITOR_INTERVAL=60
MAX_CONCURRENT_PROCESSES=3
FILE_RETENTION_DAYS=30

# Database Configuration (if different from main app)
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=edimodule
# DB_USERNAME=root
# DB_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/www/html/edimodule/logs/edi.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Email Notifications (optional)
NOTIFICATIONS_ENABLED=false
NOTIFICATION_EMAIL=admin@greenfieldplastics.com
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Production Override Settings
# Uncomment and modify for production deployment on GreenGeeks
# SFTP_HOST=edi.nifco.com
# SFTP_USERNAME=greenfield_plastics_edi
# SFTP_PASSWORD=production_password_from_nifco