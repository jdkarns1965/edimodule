# Production Environment Configuration for GreenGeeks
# Copy this to .env and update with your actual production values

# Database Configuration
DB_HOST=localhost
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Application Configuration
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com/edimodule

# SFTP Configuration for Nifco (Production)
SFTP_ENABLED=true
SFTP_LIBRARY=phpseclib
SFTP_HOST=edi.nifco.com
SFTP_PORT=22
SFTP_USERNAME=greenfield_plastics_edi
SFTP_PASSWORD=provided_by_nifco
SFTP_TIMEOUT=30

# File Paths (Production - adjust for your GreenGeeks setup)
SFTP_INBOX_PATH=/home/username/public_html/data/inbox
SFTP_OUTBOX_PATH=/home/username/public_html/data/outbox
SFTP_PROCESSED_PATH=/home/username/public_html/data/processed
SFTP_ERROR_PATH=/home/username/public_html/data/error

# Security
SESSION_LIFETIME=120
ENABLE_DEBUG_LOGGING=false