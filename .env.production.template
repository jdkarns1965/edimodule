# EDI Processing Application - PRODUCTION Configuration
# GreenGeeks Shared Hosting Environment

# Database Configuration (GreenGeeks MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=yourusername_edi_processing
DB_USER=yourusername_edi_user
DB_PASS=secure_production_password
DB_CHARSET=utf8mb4

# Application Settings
APP_ENV=production
APP_NAME="EDI Processing System"
APP_URL=https://yourdomain.com
APP_DEBUG=false
APP_TIMEZONE=America/New_York
LOG_LEVEL=info
SESSION_LIFETIME=120

# SFTP Configuration (PRODUCTION - Nifco Server)
SFTP_ENABLED=true
SFTP_LIBRARY=phpseclib
SFTP_HOST=edi.nifco.com
SFTP_PORT=22
SFTP_USERNAME=greenfield_plastics_edi
SFTP_PASSWORD=nifco_provided_password
SFTP_TIMEOUT=30

# SFTP Paths (GreenGeeks Production Paths)
SFTP_INBOX_PATH=/home/yourusername/public_html/edimodule/data/inbox
SFTP_OUTBOX_PATH=/home/yourusername/public_html/edimodule/data/outbox
SFTP_PROCESSED_PATH=/home/yourusername/public_html/edimodule/data/processed
SFTP_ERROR_PATH=/home/yourusername/public_html/edimodule/data/error
SFTP_ARCHIVE_PATH=/home/yourusername/public_html/edimodule/data/archive

# SFTP Remote Paths (Nifco Server Structure)
SFTP_REMOTE_INBOX=/greenfield/inbox
SFTP_REMOTE_OUTBOX=/greenfield/outbox

# File Monitoring Configuration (Cron-based for GreenGeeks)
FILE_MONITOR_ENABLED=true
FILE_MONITOR_INTERVAL=900
MAX_CONCURRENT_PROCESSES=2
LOG_FILE_PATH=/home/yourusername/public_html/edimodule/logs/cron_monitor.log

# EDI Processing Settings
EDI_DEFAULT_ENCODING=UTF-8
EDI_SEGMENT_TERMINATOR=~
EDI_ELEMENT_SEPARATOR=*
EDI_COMPONENT_SEPARATOR=^
EDI_MAX_FILE_SIZE=10485760
EDI_BACKUP_RETENTION_DAYS=30

# Trading Partner Settings (Nifco Production)
NIFCO_TEST_MODE=false
NIFCO_CONNECTION_TYPE=SFTP
NIFCO_HOST=edi.nifco.com
NIFCO_PORT=22
NIFCO_USERNAME=greenfield_plastics_edi
NIFCO_PASSWORD=nifco_provided_password
NIFCO_INBOX_PATH=/greenfield/inbox
NIFCO_OUTBOX_PATH=/greenfield/outbox
NIFCO_CONTACT_EMAIL=fieldsc@us.nifco.com

# Security Settings (Production)
ENCRYPTION_KEY=base64:generate_secure_32_character_key_for_production
CSRF_PROTECTION=true
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict

# Logging Configuration (GreenGeeks Paths)
LOG_CHANNEL=daily
LOG_PATH=/home/yourusername/public_html/edimodule/logs
LOG_MAX_FILES=14

# Email Notifications (Production)
MAIL_ENABLED=true
MAIL_HOST=smtp.greenfieldplastics.com
MAIL_PORT=587
MAIL_USERNAME=edi@greenfieldplastics.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=edi@greenfieldplastics.com
MAIL_FROM_NAME="EDI Processing System"

# Error Notification Recipients
NOTIFY_ERRORS_TO=admin@greenfieldplastics.com,it@greenfieldplastics.com

# Production/Testing Settings
ENABLE_TEST_MODE=false
MOCK_EDI_CONNECTIONS=false
DEBUG_EDI_PARSING=false

# Performance Settings (GreenGeeks Shared Hosting)
MEMORY_LIMIT=128M
MAX_EXECUTION_TIME=180

# Cache Settings (Disabled for shared hosting)
CACHE_ENABLED=false

# Queue Settings (Disabled for shared hosting)
QUEUE_ENABLED=false

# INSTRUCTIONS FOR DEPLOYMENT:
# 1. Copy this file to .env in production
# 2. Replace 'yourusername' with your GreenGeeks username
# 3. Replace 'yourdomain.com' with your actual domain
# 4. Update database credentials from cPanel
# 5. Get SFTP credentials from Nifco
# 6. Generate secure encryption key
# 7. Configure email settings
# 8. Test cron monitor before going live